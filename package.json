{
    "name": "blog",
    "version": "0.0.2",
    "description": "Personal blog engine",
    "main": "index.js",
    "author": "Vytenis Butkevicius",
    "license": "MIT",
    "scripts": {
        "dev": "NODE_ENV=development PORT=3005 node ./src/index.js",
        "build": "NODE_ENV=production node ./src/index.js",
        "server:build": "node_modules/.bin/tsc ./src/server/index.ts --outDir distServer --rootDir ./src --target esnext --module commonjs",
        "server": "NODE_ENV=development PORT=3005 node ./distServer/server/index.js",
        "server:prod": "NODE_ENV=production PORT=3000 node ./distServer/server/index.js",
        "test": "NODE_ENV=test jest",
        "format": "prettier --print-width=120 --tab-width=4 --single-quote --trailing-comma=all --write \"src/**/*.+(js|ts)\""
    },
    "devDependencies": {
        "@types/browser-sync": "0.0.41",
        "@types/busboy": "^0.2.3",
        "@types/highlight.js": "^9.1.9",
        "@types/jest": "^23.3.2",
        "@types/markdown-it": "0.0.5",
        "@types/md5": "2.1.32",
        "@types/moment": "^2.13.0",
        "@types/node": "^10.9.4",
        "@types/node-sass": "^3.10.32",
        "@types/rimraf": "^2.0.2",
        "@types/sequelize": "^4.27.25",
        "@types/validator": "^9.4.1",
        "@types/webpack": "^4.4.11",
        "awesome-typescript-loader": "^5.2.1",
        "jest": "^23.5.0",
        "moment": "^2.22.2",
        "nodemon": "^1.18.4",
        "prettier": "^1.14.2",
        "rimraf": "^2.6.1",
        "typescript": "^3.0.3",
        "webpack": "^4.17.2",
        "webpack-md5-hash": "0.0.6"
    },
    "dependencies": {
        "@types/glob": "^5.0.30",
        "@types/hyperscript": "0.0.3",
        "autoprefixer": "^9.1.5",
        "browser-sync": "^2.24.7",
        "busboy": "^0.2.14",
        "css-loader": "^1.0.0",
        "escape-html": "^1.0.3",
        "eslint-plugin-jest": "^21.22.0",
        "glob": "^7.1.3",
        "highlight.js": "^9.10.0",
        "hyperscript": "^2.0.2",
        "lodash": "^4.17.4",
        "markdown-it": "^8.4.2",
        "markdown-it-footnote": "^3.0.1",
        "markdown-it-highlightjs": "^3.0.0",
        "markdown-yaml-metadata-parser": "^0.0.8",
        "md5": "^2.2.1",
        "memory-fs": "^0.4.1",
        "micro": "^9.3.3",
        "mini-css-extract-plugin": "^0.4.2",
        "node-sass": "^4.9.3",
        "postcss-load-config": "^2.0.0",
        "postcss-loader": "^3.0.0",
        "postcss-plugin": "^1.0.0",
        "postcss-scss": "^2.0.0",
        "sass-loader": "^7.1.0",
        "sequelize": "^4.38.0",
        "sqlite3": "^4.0.2",
        "style-loader": "^0.23.0",
        "ts-node": "^7.0.1",
        "validator": "^10.7.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js",
            "node",
            "json"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/tools/jestPreprocessor.js"
        }
    }
}
