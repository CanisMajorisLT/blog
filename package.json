{
    "name": "blog",
    "version": "0.0.2",
    "description": "Personal blog engine",
    "main": "index.js",
    "author": "Vytenis Butkevicius",
    "license": "MIT",
    "scripts": {
        "dev": "NODE_ENV=development PORT=3005 node ./src/index.js",
        "build": "NODE_ENV=production node ./src/index.js",
        "server:build": "node_modules/.bin/tsc ./src/server/index.ts --outDir distServer --rootDir ./src --target esnext --module commonjs",
        "server": "NODE_ENV=development PORT=3005 node ./distServer/server/index.js",
        "server:prod": "NODE_ENV=production PORT=3000 node ./distServer/server/index.js",
        "test": "NODE_ENV=test jest",
        "format": "prettier --print-width=120 --tab-width=4 --single-quote --trailing-comma=all --write \"src/**/*.+(js|ts)\""
    },
    "devDependencies": {
        "@types/browser-sync": "^0.0.34",
        "@types/busboy": "^0.2.3",
        "@types/highlight.js": "^9.1.9",
        "@types/jest": "^19.2.2",
        "@types/markdown-it": "^0.0.2",
        "@types/md5": "2.1.32",
        "@types/moment": "^2.13.0",
        "@types/node": "8.0.7",
        "@types/node-sass": "^3.10.32",
        "@types/rimraf": "^0.0.28",
        "@types/sequelize": "^4.0.62",
        "@types/webpack": "^2.2.14",
        "awesome-typescript-loader": "3.2.1",
        "jest": "^20.0.4",
        "moment": "^2.18.1",
        "nodemon": "^1.11.0",
        "prettier": "^1.4.4",
        "rimraf": "^2.6.1",
        "typescript": "^2.2.1",
        "webpack": "^2.3.1",
        "webpack-md5-hash": "^0.0.5"
    },
    "dependencies": {
        "@types/glob": "^5.0.30",
        "@types/hyperscript": "^0.0.2",
        "autoprefixer": "^6.7.7",
        "browser-sync": "^2.18.8",
        "busboy": "^0.2.14",
        "css-loader": "^0.28.0",
        "escape-html": "^1.0.3",
        "eslint-plugin-jest": "^19.0.1",
        "extract-text-webpack-plugin": "^2.1.0",
        "glob": "^7.1.1",
        "highlight.js": "^9.10.0",
        "hyperscript": "^2.0.2",
        "lodash": "^4.17.4",
        "markdown-it": "^8.3.1",
        "markdown-it-footnote": "^3.0.1",
        "markdown-it-highlightjs": "^3.0.0",
        "markdown-yaml-metadata-parser": "^0.0.8",
        "md5": "^2.2.1",
        "memory-fs": "^0.4.1",
        "micro": "^7.3.3",
        "node-sass": "^4.5.2",
        "postcss-loader": "^1.3.3",
        "sass-loader": "^6.0.3",
        "sequelize": "4.2.1",
        "sqlite3": "^3.1.8",
        "style-loader": "^0.16.1",
        "ts-node": "^3.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js",
            "node",
            "json"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/tools/jestPreprocessor.js"
        }
    }
}
